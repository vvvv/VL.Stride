[Category("Filter")]
[Summary("Get the Midtones of a texture")]
[Tags("Color Grading")]

shader Exposure_TextureFX : FilterBase, ColorGradingOperations
{
    [Default(1.0)]
    compose ComputeFloat Exposure;

    [Default(1.0, 1.0, 1.0, 1.0)]
    compose ComputeFloat4 ExposureColor;

    float4 Filter(float4 tex0col)
    {
        return Exposure(tex0col, Exposure.Compute(), ExposureColor.Compute());
    }
};