[Category("Filter")]
[Summary("Get the Midtones of a texture")]
[Tags("Color Grading")]

shader Gamma_TextureFX : FilterBase, ColorGradingOperations
{
    [Default(1.0)]
    compose ComputeFloat Gamma;

    [Default(1.0, 1.0, 1.0, 1.0)]
    compose ComputeFloat4 GammaColor;

    float4 Filter(float4 tex0col)
    {
        return Gamma(tex0col, Gamma.Compute(), GammaColor.Compute());
    }
};