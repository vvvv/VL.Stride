[Category("Filter")]
[Summary("Get the Midtones of a texture")]
[Tags("Color Grading")]

shader Gain_TextureFX : FilterBase, ColorGradingOperations
{
    [Default(0.0)]
    compose ComputeFloat Gain;

    [Default(1.0, 1.0, 1.0, 1.0)]
    compose ComputeFloat4 GainColor;

    float4 Filter(float4 tex0col)
    {
        return Gain(tex0col, Gain.Compute(), GainColor.Compute());
    }
};