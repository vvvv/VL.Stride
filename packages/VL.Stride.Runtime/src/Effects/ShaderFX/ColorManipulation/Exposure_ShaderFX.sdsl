[Summary("Inverts the input")]

shader Exposure_ShaderFX : ComputeFloat4, ColorGradingOperations
{
    [Default(1.0, 1.0, 1.0, 1.0)]
    compose ComputeFloat4 Color;

    [Default(1.0)]
    compose ComputeFloat Exposure;

    [Default(1.0, 1.0, 1.0, 1.0)]
    compose ComputeFloat4 ExposureColor;

    override float4 Compute()
    {
        return Exposure(Color.Compute(), Exposure.Compute(), ExposureColor.Compute());
    }
};


