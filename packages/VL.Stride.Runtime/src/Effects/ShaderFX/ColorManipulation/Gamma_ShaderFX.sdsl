[Summary("Inverts the input")]

shader Gamma_ShaderFX : ComputeFloat4, ColorGradingOperations
{
    [Default(1.0, 1.0, 1.0, 1.0)]
    compose ComputeFloat4 Color;

    [Default(1.0)]
    compose ComputeFloat Gamma;

    [Default(1.0, 1.0, 1.0, 1.0)]
    compose ComputeFloat4 GammaColor;

    override float4 Compute()
    {
        return Gamma(Color.Compute(), Gamma.Compute(), GammaColor.Compute());
    }
};


