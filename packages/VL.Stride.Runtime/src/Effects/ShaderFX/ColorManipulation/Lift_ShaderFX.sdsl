[Summary("Inverts the input")]

shader Lift_ShaderFX : ComputeFloat4, ColorGradingOperations
{
    [Default(1.0, 1.0, 1.0, 1.0)]
    compose ComputeFloat4 Color;

    [Default(1.0)]
    compose ComputeFloat Lift;

    [Default(1.0, 1.0, 1.0, 1.0)]
    compose ComputeFloat4 LiftColor;

    override float4 Compute()
    {
        return Lift(Color.Compute(), Lift.Compute(), LiftColor.Compute());
    }
};


